{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "lib": ["es2019", "dom"],
        "module": "es2020",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "target": "es2019",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"],
    "include": ["resources/js/**/*.ts"]
}
